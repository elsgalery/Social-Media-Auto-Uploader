{
  "name": "social-media-auto-uploader",
  "version": "2.1.0",
  "description": "Aplikasi web untuk mengelola dan mengupload konten ke berbagai platform media sosial secara otomatis",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server . -p 3000 -o",
    "dev": "npx live-server --port=3000 --open=/",
    "build": "npm run minify:css && npm run minify:js",
    "minify:css": "npx cleancss-cli css/styles.css -o css/styles.min.css",
    "minify:js": "npx terser js/social-media-uploader.js -o js/social-media-uploader.min.js --compress --mangle",
    "deploy": "npm run build && gh-pages -d .",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/social-media-auto-uploader.git"
  },
  "keywords": [
    "social-media",
    "auto-uploader",
    "instagram",
    "facebook",
    "tiktok",
    "javascript",
    "html5",
    "css3"
  ],
  "author": "Social Media Uploader Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/username/social-media-auto-uploader/issues"
  },
  "homepage": "https://username.github.io/social-media-auto-uploader",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "gh-pages": "^6.1.1",
    "http-server": "^14.1.1",
    "live-server": "^1.2.2",
    "terser": "^5.26.0"
  }
}